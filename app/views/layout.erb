<head>
    <title>iBilik</title>  
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/styles.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src="/js/application.js"></script>
  </head>
  <body>
    <header>
      <h1>iBilik</h1>
      <%= @warning if @warning %>
      	<nav>
		      <ul>
            <li><a href="/"><button>Home</button></a></li>
            <% if current_user.nil? %>
              <li><a href="/users/signup"><button>Sign Up</button></a></li>
              <li><a href="/users/login"><button>Login</button></a></li>
            <% else %>
              <li><a href="/users/<%= current_user.id %>"><button>Profile</button></a></li>
              <li><a href="/properties/new"><button>Post a property</button></a></li>
              <li><a href="/users/logout"><button>Logout</button></a></li>
            <% end %>
            <li><a href="/properties/all"><button>View All Properties</button></a></li>
		      </ul>
		    </nav>
    </header>
    <section>
      <%= yield %>
    </section>
  </body>